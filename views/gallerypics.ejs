<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for further styling -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .gallery-item {
            margin-bottom: 30px;
            text-align: center;
        }
        .gallery-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .gallery-item p {
            margin-top: 10px;
            color: #333;
        }
        .back-link {
            text-align: center;
            display: block;
            margin-top: 20px;
            font-size: 1.2rem;
        }
    </style>
    <script>
        document.addEventListener('contextmenu', function(event) {
            event.preventDefault(); // Disable right-click menu
        });
    </script>
</head>
<body>
    <div class="container">
        <h1 class="text-center text-primary">Your Photo Gallery</h1>

        <div class="row">
            <% images.forEach(function(image) { %>
                <div class="col-md-4 col-sm-6 col-xs-12 gallery-item">
                    <img src="/image/<%= image._id %>" alt="<%= image.file_name %>" class="img-fluid" draggable="false">
                    <p><%= image.file_name %> (Type: <%= image.file_type %>)</p>
                    <p><b>Uploaded At:</b> <%= image.created_at.toDateString() %></p>
                    <p><b>Image ID:</b> <%= image._id %></p>
                </div>
            <% }); %>
        </div>

        <a href="/" class="back-link">Back to Upload</a>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
