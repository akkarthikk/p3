<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .gallery-item {
            margin-bottom: 30px;
            text-align: center;
        }
        .gallery-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .gallery-item p {
            margin-top: 10px;
            color: #333;
        }
        .back-link {
            text-align: center;
            display: block;
            margin-top: 20px;
            font-size: 1.2rem;
        }
    </style>
    <script>
        document.addEventListener('contextmenu', function(event) {
            event.preventDefault(); // Disable right-click menu
        });
    </script>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Image Upload App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/gallery">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Upload</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger nav-link text-white" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center text-primary">Your Photo Gallery</h1>
        <div class="row">
            <% images.forEach(function(image) { %>
                <div class="col-md-4 col-sm-6 col-xs-12 gallery-item">
                    <img src="/image/<%= image.id %>" alt="<%= image.file_name %>" class="img-fluid" draggable="false">
                    <p><%= image.file_name %> (Type: <%= image.file_type %>)<%= image.created_at %></p>
                </div>
            <% }); %>
        </div>
        <a href="/" class="back-link">Back to Upload</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>